<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <h1 class="header-title">Sistema de Gerenciamento de Lutas de Boxe</h1>
            <p class="header-subtitle">Gerencie lutadores, lutas, eventos e ingressos</p>
        </div>
    </header>


    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            <section class="content-section">
                <div class="card">
                    <!-- Header -->
                    <div class="card-header">
                        <h2 class="card-title">Gerenciamento de Lutas</h2>
                    </div>

                    <!-- Toolbar -->
                    <div class="toolbar">
                        <div class="search-container">
                            <svg class="search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="11" cy="11" r="8"></circle>
                                <path d="m21 21-4.35-4.35"></path>
                            </svg>
                            <input type="text" class="search-input" placeholder="Pesquisar luta...">
                        </div>
                    </div>

                    <!-- Table -->
                    <div class="table-container">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Lutador 1</th>
                                    <th class="text-center">VS</th>
                                    <th>Lutador 2</th>
                                    <th>Data</th>
                                    <th>Horário</th>
                                    <th>Categoria</th>
                                    <th class="text-center">Rounds</th>
                                    <th>Status</th>
                                    <th class="text-center">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td class="text-highlight">Mike Tyson</td>
                                    <td class="text-center"><span class="badge badge-neutral">VS</span></td>
                                    <td class="text-highlight">Muhammad Ali</td>
                                    <td>15/12/2025</td>
                                    <td>20:00</td>
                                    <td>Peso Pesado</td>
                                    <td class="text-center">12</td>
                                    <td><span class="badge badge-info">Agendada</span></td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td class="text-highlight">Floyd Mayweather</td>
                                    <td class="text-center"><span class="badge badge-neutral">VS</span></td>
                                    <td class="text-highlight">Manny Pacquiao</td>
                                    <td>22/12/2025</td>
                                    <td>21:00</td>
                                    <td>Peso Médio</td>
                                    <td class="text-center">12</td>
                                    <td><span class="badge badge-success">Confirmada</span></td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td class="text-highlight">Canelo Álvarez</td>
                                    <td class="text-center"><span class="badge badge-neutral">VS</span></td>
                                    <td class="text-highlight">Floyd Mayweather</td>
                                    <td>05/01/2026</td>
                                    <td>19:30</td>
                                    <td>Peso Médio-Pesado</td>
                                    <td class="text-center">10</td>
                                    <td><span class="badge badge-info">Agendada</span></td>
                                </tr>
                                <tr>
                                    <td>4</td>
                                    <td class="text-highlight">Mike Tyson</td>
                                    <td class="text-center"><span class="badge badge-neutral">VS</span></td>
                                    <td class="text-highlight">Canelo Álvarez</td>
                                    <td>18/01/2026</td>
                                    <td>22:00</td>
                                    <td>Peso Pesado</td>
                                    <td class="text-center">12</td>
                                    <td><span class="badge badge-warning">Pendente</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Footer -->
                    <div class="card-footer">
                        <p>Total de lutas: 4</p>
                    </div>
                </div>
            </section>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2025 Sistema de Gerenciamento de Boxe. Todos os direitos reservados.</p>
        </div>
    </footer>
</body>
